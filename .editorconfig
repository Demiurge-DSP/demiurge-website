# top-most EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf

[*.{html,css}]
indent_style = tab
tab_width = 4
insert_final_newline = true
indent_brace_style = allman

[*.php]
indent_style = tab
tab_width = 4
insert_final_newline = false
indent_brace_style = allman

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true
indent_brace_style = allman

[{*.json,*.yml,*.yaml,*.md}]
indent_style = space
indent_size = 2
insert_final_newline = true
indent_brace_style = allman

[*.js]
indent_style = space
indent_size = 2
insert_final_newline = true
indent_brace_style = java
